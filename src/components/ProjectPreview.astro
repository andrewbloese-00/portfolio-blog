---
interface Props { 
    title: string,
    stack: string[], 
    slug: string,
    thumbnail: string,
    preview_text: string, 
}
const { title, stack, slug, thumbnail, preview_text } = Astro.props;
---
<div class="project-preview-card">
    <img src={thumbnail} alt="title"/>
    <div class="project-preview-card-details">
        <a href=`/project/${slug}`><h3>{title}</h3></a>
        <ul class="project-preview-card-stack">
            {stack.map(stackItem=><li>{stackItem}</li>)}
        </ul>
        <p>{preview_text}</p>
    </div>
</div>
<style>
    .project-preview-card { 
        border: 4px solid #000;
        position: relative;
        aspect-ratio: 5/6;
        max-width: 500px;
        overflow: hidden;

    }
    .project-preview-card img { 
        object-fit: contain;
        width: 100%;
        position: absolute;
        
        
    }

    .project-preview-card-stack li{ 
        border: 4px solid black;
        border-radius: 5px;
        padding: 2px 8px;
        font-size: 14px;

    } 
    .project-preview-card-stack { 
        list-style: none;
        display: flex;
        justify-content: flex-start;
        padding: 0 20px;
        gap: 20px;
        margin: 0;
        width:100%;
    }
    .project-preview-card-details {
        /* color: rgb(206, 206, 206); */
        position: absolute;
        bottom: 0;
        right: 0;
        width: 100%;
        background-color: #f4f4f4;
        border-top: 4px solid #000;
    }
    .project-preview-card-details h3 {
         margin: 0; padding: 10px 20px;
            
    }
    .project-preview-card-details p { 
        font-size: 16px;
        padding-inline: 20px;
    }
    .project-preview-card-details a {
        text-decoration: none;
        color: #333;
        border-bottom: 2px solid #333;
    }

</style>